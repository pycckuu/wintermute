{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "command": "cd /Users/igor/conductor/workspaces/wintermute/perth-v4 && cargo fmt --all -- --check 2>&1 | head -20",
        "description": "Check formatting after file edits"
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(cargo build*)",
      "Bash(cargo test*)",
      "Bash(cargo clippy*)",
      "Bash(cargo fmt*)",
      "Bash(cargo check*)"
    ]
  }
}
